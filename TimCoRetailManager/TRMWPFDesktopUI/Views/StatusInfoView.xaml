<UserControl x:Class="TRMWPFDesktopUI.Views.StatusInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TRMWPFDesktopUI.Views"
             mc:Ignorable="d"   >
    <StackPanel Orientation="Vertical">
        <TextBlock x:Name="Header" FontSize="20" FontWeight="Bold" Margin="10"></TextBlock>
        <TextBlock x:Name="Message" FontSize="18"  Margin="10"></TextBlock>
        <Button x:Name="Close" Padding="10" Margin="20" Content="Close"/>
    </StackPanel>
</UserControl>
